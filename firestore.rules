rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile and settings
    // Admins can read all user profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isAdmin();
      allow write: if request.auth != null && isAdmin();
    }
    
    // User settings - basic auth check (tier validation moved to app level)
    match /user_settings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isAdmin();
    }
    
    // Subscriptions are read-only for users (written by Cloud Functions)
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
  }
  
  // Helper function to check if user is admin
  function isAdmin() {
    return request.auth.token.email == 'amyerdt6@gmail.com';
  }
  
  // Tier validation is now handled at the app level in settingsStorage.js
}